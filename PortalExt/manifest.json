{
  "name": "CCC PortalExt",
  "description": "Portal Extension for CCC Portal",
  "version": "1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "worker.js"
  },
  "content_scripts": [{
    "matches": ["http://apps.custom-control.com/returns/*"],
    "js": ["codeSrc/jquery-3.4.1.min.js", "codeSrc/jquery-ui.min.js"],
    "run_at": "document_start",
    "match_about_blank": true
  }, {
    "matches": ["http://apps.custom-control.com/*"],
    "css": ["injections/css/restyle.css"],
    "js": ["injections/auto/overrideResize.js"],
    "run_at": "document_start",
    "match_about_blank": false
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "permissions": [
    "activeTab",
    "commands",
    "offscreen",
    "scripting",
    "sidePanel",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [ "<all_urls>" ],
  "action": {
    "default_title": "Click to open panel",
    "default_icon": {
      "16": "images/custLogo16.png",
      "32": "images/custLogo32.png",
      "48": "images/custLogo48.png",
      "128": "images/custLogo128.png"
    }
  },
  "commands": {
    "open-sidepanel-sidepanel-all-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Open side panel with ctrl+q!"
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Q",
        "mac": "Command+Q",
        "chromeos": "Ctrl+Q",
        "linux": "Ctrl+Q"
      }
    }
  },
  "web_accessible_resources": [{
    "resources": [
      "injections/alertHandle.js"
    ],
    "matches": [ "*://*/*" ]
  }]
}